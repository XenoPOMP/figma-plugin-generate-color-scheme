{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "exclude": [
    "./src/scripts"
  ]
}
